<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    
    
    <bean id="hello" class="com.shahid.Hello" >
         
    </bean>
    
    <bean id="a1" class="com.shahid.Address" >
        <constructor-arg value="Dhanmondi"></constructor-arg>
        <constructor-arg value="Dhaka"></constructor-arg>
        <constructor-arg value="Bangladesh"></constructor-arg>
         
    </bean>
    
    <bean id="e" class="com.shahid.Employee" >
        
        <constructor-arg value="10" type="int"></constructor-arg>
        <constructor-arg value="Shahid" ></constructor-arg>
        
        <constructor-arg>
            
            <ref bean="a1"></ref>
            
        </constructor-arg>
    </bean>
    
    
    
    
</beans>