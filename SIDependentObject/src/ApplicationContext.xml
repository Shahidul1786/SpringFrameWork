<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id="address1" class="com.shahid.Address">

<property name="addressLine1" value="8/A,dhanmondi-15"></property>
<property name="thana" value="dhanmondi"></property>
<property name="city" value="Dhaka"></property>
<property name="country" value="Bangladesh"></property>

</bean>

<bean id="employee" class="com.shahid.Employee">

<property name="id" value="101"></property>
<property name="name" value="shahidul"></property>
<property name="address" ref="address1"></property>


</bean>

</beans>